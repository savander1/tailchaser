<Window x:Class="TailChaser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:menuPane="clr-namespace:TailChaser.UI.ViewModels.MenuPane;assembly=TailChaser.UI"
        Title="{Binding Path=Name}" Height="800" Width="1050">
<Window.Resources>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TailChaser.UI;component/Views/MainWindowResources.xaml"/>
        </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
</Window.Resources>
    <DockPanel Width="Auto" Height="Auto">
        <Menu DataContext="{Binding MenuPane}" ItemsSource="{Binding MenuPane.MenuPaneItems}"  >
            <Menu.ItemContainerStyle>
                <Style TargetType="{x:Type MenuItem}" >
                    <Setter Property="Command" Value="{Binding Command}" />
                    <Setter Property="Header" Value="{Binding Name}"></Setter>
                </Style>
            </Menu.ItemContainerStyle>
            <Menu.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type menuPane:MenuPaneItemViewModel}" ItemsSource="{Binding Path=Commands}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
            </Menu.ItemTemplate>
        </Menu>
    </DockPanel>
</Window>
