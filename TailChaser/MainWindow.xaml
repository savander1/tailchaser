<Window x:Class="TailChaser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Path=Name}" Height="800" Width="1050">
<Window.Resources>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TailChaser.UI;component/Views/MainWindowResources.xaml"/>
        </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
</Window.Resources>
    <DockPanel Width="Auto" Height="Auto">
        <ContentPresenter  DockPanel.Dock="Top" DataContext="{Binding Path=MenuPane}" ContentTemplate="{StaticResource MenuTemplate}"></ContentPresenter>
        <!--<Grid DockPanel.Dock="Top" MaxHeight="30" DataContext="{Binding Path=MenuPane}">
            <ContentPresenter ContentTemplate="{StaticResource MenuTemplate}"></ContentPresenter>
        </Grid>-->
    </DockPanel>
</Window>
