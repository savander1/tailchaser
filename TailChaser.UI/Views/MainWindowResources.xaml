<ResourceDictionary 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vmMenu="clr-namespace:TailChaser.UI.ViewModels.MenuPane"
             xmlns:dialogs="clr-namespace:TailChaser.UI.Dialogs">
    
    
    <DataTemplate x:Key="MenuTemplate">
        <Menu IsMainMenu="True">
            <HierarchicalDataTemplate DataType="vmMenu:MenuPaneViewModel" ItemsSource="{Binding MenuPaneItems}">
                <MenuItem Header="{Binding Name}"></MenuItem>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="vmMenu:MenuPaneItemViewModel" ItemsSource="{Binding Commands}">
                <MenuItem Header="{Binding Name}" Command="{Binding Commands}"></MenuItem>
            </HierarchicalDataTemplate>
        </Menu>
    </DataTemplate>
    
    <Style TargetType="{x:Type dialogs:FileSettingsDialog}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dialogs:FileSettingsDialog}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
